@page "/pizzadelivery"
@rendermode InteractiveServer

<h3>PizzaDelivery</h3>
<label>
    <input type="checkbox" @bind="pizza.PizzaTopping.Pepperoni" />
    Pepperoni
</label>
<label>
    <input type="checkbox" @bind="pizza.PizzaTopping.Sausage" />
    Sausage
</label>
<label>
    <input type="checkbox" @bind="pizza.PizzaTopping.Bacon" />
    Bacon
</label>
<p>Pizza Selection Checker</p>
<ul>
    @if (pizza.PizzaTopping.Pepperoni)
    {
        <li>Pepperoni</li>
    }
    @if (pizza.PizzaTopping.Sausage)
    {
        <li>Sausage</li>
    }
    @if (pizza.PizzaTopping.Bacon)
    {
        <li>Bacon</li>
    }
</ul>

<p>Total Price: $@pizza.GetFinalPrice()</p>

@code {
    Pizza pizza = new Pizza();

}
